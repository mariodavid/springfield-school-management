<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.company.ceupa.entity.Grade"
          extends="_local"
          name="grade-view">
        <property name="courses"
                  view="course-view"/>
        <property name="students"
                  view="_local"/>
    </view>
    <view class="com.company.ceupa.entity.Teacher"
          extends="_local"
          name="teacher-view">
        <property name="user"
                  view="_minimal"/>
        <property name="courses"
                  view="course-view"/>
    </view>
    <view class="com.company.ceupa.entity.Person"
          extends="_local"
          name="person-view">
        <property name="user"
                  view="_minimal"/>
    </view>
    <view class="com.company.ceupa.entity.Parent"
          extends="_local"
          name="parent-view">
        <property name="user"
                  view="_minimal"/>
    </view>
    <view class="com.company.ceupa.entity.Student"
          extends="_local"
          name="student-view">
        <property name="grade"
                  view="_minimal"/>
    </view>
    <view class="com.company.ceupa.entity.Course"
          extends="_local"
          name="course-view">
        <property name="teacher"
                  view="_minimal"/>
        <property name="grade"
                  view="_minimal"/>
        <property name="exams"
                  view="exam-view"/>
    </view>
    <view class="com.company.ceupa.entity.Exam"
          extends="_local"
          name="exam-view">
        <property name="course"
                  view="_minimal"/>
        <property name="results"
                  view="examResult-view"/>
    </view>
    <view class="com.company.ceupa.entity.ExamResult"
          extends="_local"
          name="examResult-view">
        <property name="exam"
                  view="_minimal"/>
        <property name="student"
                  view="_minimal"/>
    </view>
</views>
